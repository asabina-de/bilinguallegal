% NOTE: all the sections inserted through the \addsection command will appear
% in the TOC's
\NewDocumentCommand{\insertTOCs}{ m m }{%
  \setlength{\cftbeforesecskip}{-2pt} % Space between lines
  \renewcommand{\cftsecaftersnum}{.}
  \renewcommand{\cftsecleader}{\cftdotfill{\cftdotsep}}

  \bigskip
  \addtext{%
    \centerline{\large\textbf{#1}}
  }{%
    \centerline{\large\textbf{#2}}
  }

  \ifDisplaySideBySide%
    \begin{minipage}[t]{0.47\textwidth}
      \fontsize{8}{12}
      \ifDisplayLeft\tableof{d}\else\tableof{e}\fi
    \end{minipage}%
    \hspace*{0.03\textwidth}%
    \begin{minipage}[t]{0.48\textwidth}
      \fontsize{8}{12}
      \ifDisplayLeft\tableof{e}\else\tableof{d}\fi
    \end{minipage}%
  \else% DisplaySideBySide
    \fontsize{8}{12}
    \ifDisplayLeft%
      \tableof{d}
    \else%
      \tableof{e}
    \fi
  \fi% DisplaySideBySide
}% end insertTOC

% An environment to list Annexes
\NewDocumentEnvironment{listAnnexes}{m m O{0.32\linewidth} O{0.05\linewidth} O{0.32\linewidth}}{%
  \medskip
  \global\newcounter{annex}
  \global\setcounter{annex}{0}
  \footnotesize

  \ifDisplaySideBySide%
    \begin{minipage}{0.5\linewidth}
      \centerline{%
        \bfseries\large
        \ifDisplayLeft #1\else #2\fi
      }
    \end{minipage}%
    \begin{minipage}{0.5\linewidth}
      \centerline{%
        \bfseries\large
        \ifDisplayLeft #2\else #1\fi
      }
    \end{minipage}
  \else% DisplaySideBySide
    \ifDisplayLeft%
      \centerline{\bfseries\large #1}
    \else%
      \centerline{\bfseries\large #2}
    \fi
  \fi% DisplaySideBySide

  \par
  \smallskip

  \ifDisplaySideBySide%
    \begin{tabular}{%
      l@{\hskip 3pt}
      l@{\hskip 4pt}
      p{#3}
      p{#4}
      l@{\hskip 3pt}
      l@{\hskip 4pt}
      p{#5}
    }
  \else%
    \begin{tabular}{%
      l@{\hskip 3pt}
      l@{\hskip 4pt}
      p{#3}
    }
  \fi
}{%
  \end{tabular}
  \setcounter{annex}{0}
}

