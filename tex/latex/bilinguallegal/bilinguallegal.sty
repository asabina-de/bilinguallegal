% Title
\NewDocumentCommand{\addtitle}{ +m +m }{%
  \begin{sloppypar}  % To prevent overfull lines
    \label{thetitle}

  \ifDisplaySideBySide%
    % TODO Remove title from outline
    \ifOutlineinblocks%
      \begin{paracol}{2} % specify two columns...
        \begin{leftcolumn*}
          \begin{center}
            \LARGE\bfseries
            \ifDisplayLeft #1\else #2\fi
            %\IfStrEq{\getpagerefnumber{thetitle}}{0}{}{
            %\expandafter%
            %\bookmark[page=\getpagerefnumber{thetitle}, level=-1]{%
            %  \bfseries #1\BilingualAgreementLangDelimiter #2}%
            %}
          \end{center}
          \bookmark[page=1, level=-1]{%
            \ifDisplayLeft #1\else #2\fi
          }
        \end{leftcolumn*}
        \begin{rightcolumn}
          \begin{center}
            \LARGE\bfseries
            \ifDisplayLeft #2\else #1\fi
          \end{center}
          \IfStrEq{\getpagerefnumber{thetitle}}{0}{}{
            \BookmarkAtEnd{%
              \bookmarksetup{startatroot}%
              \expandafter%
              \bookmark[page=\getpagerefnumber{thetitle}, level=-1]{%
                \ifDisplayLeft #2\else #1\fi
              }%
            }
          }
        \end{rightcolumn}
      \end{paracol}
    \else% Outlineinblocks
      \begin{paracol}{2} % specify two columns...
        \begin{leftcolumn*}
          \begin{center}
            \LARGE\bfseries
            \ifDisplayLeft #1\else #2\fi
          \end{center}
        \end{leftcolumn*}
        \begin{rightcolumn}
          \begin{center}
            \LARGE\bfseries
            \ifDisplayLeft #2\else #1\fi
          \end{center}
        \end{rightcolumn}
      \end{paracol}
    \fi%%%%
  \else% not DisplaySideBySide
    \ifDisplayLeft%
      \begin{center}
        \LARGE\bfseries
        #1
      \end{center}
    \else%
      \begin{center}
        \LARGE\bfseries
        #2
      \end{center}
    \fi
  \fi
  \end{sloppypar}
  \medskip
}% end addtitle

% Section
\newcounter{seccoun} % Counter for sections
\setcounter{seccoun}{1}
\NewDocumentCommand{\addsection}{ m +m +m }{%
  \ifDisplaySideBySide%
    \ifOutlineinblocks%
      \begin{sloppypar}  % To prevent overfull lines
        \label{#1}
        \begin{paracol}{2} % specify two columns...
          \begin{leftcolumn*}
            \toftagthis{d}
            \section{\texorpdfstring{\ifDisplayLeft #2\else #3\fi}{%
              \ifDisplayLeft #2\else #3\fi
            }}
          \end{leftcolumn*}
          \begin{rightcolumn}
            \toftagthis{e}
            \hypersetup{bookmarksdepth=-2}
            \section{\ifDisplayLeft #3\else #2\fi}
            \IfStrEq{\getpagerefnumber{#1}}{0}{}{
              \BookmarkAtEnd{%
              \expandafter%
              \bookmark[page=\getpagerefnumber{#1}, level=1]{#3}%
            }}
            \hypersetup{bookmarksdepth}% back to tocdepth
          \end{rightcolumn}
        \end{paracol}
      \end{sloppypar}
      \stepcounter{seccoun}
    \else%
      \begin{sloppypar}  % To prevent overfull lines
        \begin{paracol}{2} % specify two columns...
          \begin{leftcolumn*}
            \toftagthis{d}
            \section{\texorpdfstring{\ifDisplayLeft #2\else #3\fi}{%
              \ifDisplayLeft%
                #2 --- #3
              \else%
                #3 --- #2
              \fi
            }}\label{#1}
          \end{leftcolumn*}
          \begin{rightcolumn}
            \toftagthis{e}
            \hypersetup{bookmarksdepth=-2}
            \section{\ifDisplayLeft #3\else #2\fi}
            \hypersetup{bookmarksdepth}% back to tocdepth
          \end{rightcolumn}
        \end{paracol}
      \end{sloppypar}
      \stepcounter{seccoun}
    \fi%
  \else% DisplaySideBySide
    \begin{sloppypar}  % To prevent overfull lines
      \toftagthis{d}
      \ifOutlineinblocks%
        \ifDisplayLeft\section{#2}\else\section{#3}\fi
      \else%
        \section{\texorpdfstring{#2}{%
          \ifDisplayLeft%
            #2\BilingualAgreementLangDelimiter #3
          \else%
            #3\BilingualAgreementLangDelimiter #2
          \fi
        }}
      \fi
      \label{#1}
      \toftagthis{e}
      \hypersetup{bookmarksdepth=-2}
      \ifOutlineinblocks%
        \IfStrEq{\getpagerefnumber{#1}}{0}{}{
        \BookmarkAtEnd{%
        \expandafter\bookmark[page=\getpagerefnumber{#1}, level=1]{%
          \ifDisplayLeft #2\else #3\fi
        }%
      }}
      \fi
      \hypersetup{bookmarksdepth}% back to tocdepth
    \end{sloppypar}
    \stepcounter{seccoun}
  \fi
}% end addsection

