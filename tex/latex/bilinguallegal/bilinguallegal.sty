% Clause
\NewDocumentCommand{\addclause}{ m m m +m +m }{%
  \refstepcounter{clausecount} % Increase the clausecont counter
  \begin{sloppypar}  % To prevent overfull lines
    \ifDisplaySideBySide%
      \begin{paracol}{2} % specify two columns...
        \begin{leftcolumn*}
          \begin{itemize}
            \ifDisplayLeft
              \item[\bfseries\theclausecount\label{#1}] \textbf{#2} \\ #4
            \else
              \item[\bfseries\theclausecount\label{#1}] \textbf{#3} \\ #5
            \fi
          \end{itemize}
        \end{leftcolumn*}
        \begin{rightcolumn}
          \begin{itemize}
            \ifDisplayLeft%
              \item[\bfseries\theclausecount] \textbf{#3} \\ #5
            \else%
              \item[\bfseries\theclausecount] \textbf{#2} \\ #4
            \fi
          \end{itemize}
        \end{rightcolumn}
      \end{paracol}
    \else% single-col
      \begin{itemize}
        \ifDisplayLeft%
          \item[\bfseries\theclausecount] \textbf{#2} \\ #4
        \else%
          \item[\bfseries\theclausecount] \textbf{#3} \\ #5
        \fi
      \end{itemize}
    \fi
  \end{sloppypar}
}% end add clause

