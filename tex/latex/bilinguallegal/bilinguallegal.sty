% Title
\NewDocumentCommand{\addtitle}{ +m +m }{%
  \begin{sloppypar}  % To prevent overfull lines
    \label{thetitle}

  \ifDisplaySideBySide%
    % TODO Remove title from outline
    \ifOutlineinblocks%
      \begin{paracol}{2} % specify two columns...
        \begin{leftcolumn*}
          \begin{center}
            \LARGE\bfseries
            \ifDisplayLeft #1\else #2\fi
            %\IfStrEq{\getpagerefnumber{thetitle}}{0}{}{
            %\expandafter%
            %\bookmark[page=\getpagerefnumber{thetitle}, level=-1]{%
            %  \bfseries #1\BilingualAgreementLangDelimiter #2}%
            %}
          \end{center}
          \bookmark[page=1, level=-1]{%
            \ifDisplayLeft #1\else #2\fi
          }
        \end{leftcolumn*}
        \begin{rightcolumn}
          \begin{center}
            \LARGE\bfseries
            \ifDisplayLeft #2\else #1\fi
          \end{center}
          \IfStrEq{\getpagerefnumber{thetitle}}{0}{}{
            \BookmarkAtEnd{%
              \bookmarksetup{startatroot}%
              \expandafter%
              \bookmark[page=\getpagerefnumber{thetitle}, level=-1]{%
                \ifDisplayLeft #2\else #1\fi
              }%
            }
          }
        \end{rightcolumn}
      \end{paracol}
    \else% Outlineinblocks
      \begin{paracol}{2} % specify two columns...
        \begin{leftcolumn*}
          \begin{center}
            \LARGE\bfseries
            \ifDisplayLeft #1\else #2\fi
          \end{center}
        \end{leftcolumn*}
        \begin{rightcolumn}
          \begin{center}
            \LARGE\bfseries
            \ifDisplayLeft #2\else #1\fi
          \end{center}
        \end{rightcolumn}
      \end{paracol}
    \fi%%%%
  \else% not DisplaySideBySide
    \ifDisplayLeft%
      \begin{center}
        \LARGE\bfseries
        #1
      \end{center}
    \else%
      \begin{center}
        \LARGE\bfseries
        #2
      \end{center}
    \fi
  \fi
  \end{sloppypar}
  \medskip
}% end addtitle

% Section
\newcounter{seccoun} % Counter for sections
\NewDocumentCommand{\addsection}{ m +m +m }{%
  \refstepcounter{seccoun}
  \label{#1}
  \ifDisplaySideBySide%
    \ifOutlineinblocks%
      \begin{sloppypar}  % To prevent overfull lines
        \begin{paracol}{2} % specify two columns...
          \begin{leftcolumn*}
            \toftagthis{left}
            \section{\texorpdfstring{\ifDisplayLeft #2\else #3\fi}{%
              \ifDisplayLeft #2\else #3\fi
            }}
          \end{leftcolumn*}
          \begin{rightcolumn}
            \toftagthis{right}
            \hypersetup{bookmarksdepth=-2}
            \section{\ifDisplayLeft #3\else #2\fi}
            \IfStrEq{\getpagerefnumber{#1}}{0}{}{
              \BookmarkAtEnd{%
              \expandafter%
              \bookmark[page=\getpagerefnumber{#1}, level=1]{#3}%
            }}
            \hypersetup{bookmarksdepth}% back to tocdepth
          \end{rightcolumn}
        \end{paracol}
      \end{sloppypar}
    \else% Outlineinblocks
      \begin{sloppypar}  % To prevent overfull lines
        \begin{paracol}{2} % specify two columns...
          \begin{leftcolumn*}
            \toftagthis{left}
            \section{\texorpdfstring{%
              \ifDisplayLeft #2\else #3\fi
            }{%
              \ifDisplayLeft%
                #2 \BilingualAgreementLangDelimiter #3
              \else%
                #3 \BilingualAgreementLangDelimiter #2
              \fi
            }}
          \end{leftcolumn*}
          \begin{rightcolumn}
            \toftagthis{right}
            \hypersetup{bookmarksdepth=-2}
            \section{\ifDisplayLeft #3\else #2\fi}
            \hypersetup{bookmarksdepth}% back to tocdepth
          \end{rightcolumn}
        \end{paracol}
      \end{sloppypar}
    \fi%
  \else% DisplaySideBySide
    \begin{sloppypar}  % To prevent overfull lines
      \ifOutlineinblocks%
        \ifDisplayLeft
          \toftagthis{left}
          \section{#2}
        \else% DisplayLeft
          \toftagthis{right}
          \section{#3}
        \fi
      \else%
        \ifDisplayLeft%
          \toftagthis{left}
          \section{\texorpdfstring{#2}{#2}}
        \else%
          \toftagthis{right}
          \section{\texorpdfstring{#3}{#3}}
        \fi
      \fi
      \hypersetup{bookmarksdepth=-2}
      \hypersetup{bookmarksdepth}% back to tocdepth
    \end{sloppypar}
  \fi
}% end addsection

